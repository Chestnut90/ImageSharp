<UserControl x:Class="ImageProcessing.Views.ucSimpleViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessing.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="buttonsGrid" Grid.Column="0">
            <StackPanel x:Name="buttonStack">
                <Button x:Name="ButtonLoad" Content="Load image" Height="30" Click="ButtonLoad_Click"/>
                <Button x:Name="ButtonOrigin" Content="Original image" Height="30" Click="Origin_Click"/>
                <Button x:Name="ButtonKmean" Content="Kmean" Height="30" Click="ButtonKmean_Click"/>
            </StackPanel>    
        </Grid>
        <Grid x:Name="imageGrid" Grid.Column="1">
            <Image x:Name="ImageViewer" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"/>
        </Grid>
    </Grid>
</UserControl>
