<UserControl x:Class="ImageProcessing.ImageViewers.UcImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessing.ImageViewers" xmlns:imageviewers="clr-namespace:Views.ImageViewers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <imageviewers:UIZoomElement x:Name="ZoomElement">
            <Image x:Name="ImageBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </imageviewers:UIZoomElement>
    </DockPanel>
</UserControl>
